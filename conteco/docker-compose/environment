#!/usr/bin/env bash

# START CONFIGURATION
export CONTECO_DC_GLOBAL_STACKS="stack.ekg,nginx.rewrite,nginx.rewrite,nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES_PREVIOUS="ekg,url_rewrite,url_rewrite,url_rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="ekg,ext_elasticsearch,ui_grafana,ui_kibana"
export CONTECO_DC_GLOBAL_BOOTSTACKS="ekg"
export CONTECO_DC_GLOBAL_RUNSTACKS="ext_elasticsearch,ui_grafana,ui_kibana"
export CONTECO_DC_GLOBAL_VOLUME_LIST="conteco_dc_elasticsearch_volume,conteco_dc_grafana_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_EXT_ELASTICSEARCH_ENVIRONMENT_CONF_PATH,$CONTECO_DC_EXT_ELASTICSEARCH_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_LABELS,$CONTECO_DC_UI_GRAFANA_ENVIRONMENT_CONF_PATH,$CONTECO_DC_UI_GRAFANA_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_UI_GRAFANA_DEPLOY_LABELS,$CONTECO_DC_UI_KIBANA_ENVIRONMENT_CONF_PATH,$CONTECO_DC_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_UI_KIBANA_DEPLOY_LABELS,$CONTECO_DC_GLOBAL_VOLUMES'
# END CONFIGURATION

# START GLOBAL SETTINGS
DOLLAR='$'
export CONTECO_DC_EXT_ELASTICSEARCH_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_TYPE}/elasticsearch"
export CONTECO_DC_EXT_ELASTICSEARCH_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_elasticsearch:9200"
export CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_LABELS="traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay, traefik.http.services.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_elasticsearch.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_elasticsearch.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_elasticsearch.rule=PathPrefix(\"/${DOLLAR}{CONTECO_TYPE}/elasticsearch\")"
export CONTECO_DC_UI_GRAFANA_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_TYPE}/grafana"
export CONTECO_DC_UI_GRAFANA_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_grafana:3000"
export CONTECO_DC_UI_GRAFANA_DEPLOY_LABELS="traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay, traefik.http.services.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_grafana.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_grafana.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_grafana.rule=PathPrefix(\"/${DOLLAR}{CONTECO_TYPE}/grafana\")"
export CONTECO_DC_UI_KIBANA_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_TYPE}/kibana"
export CONTECO_DC_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_kibana:5601"
export CONTECO_DC_UI_KIBANA_DEPLOY_LABELS="traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_ECOSYSTEM_RUNTIME}_overlay, traefik.http.services.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_kibana.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_kibana.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_TYPE}_conteco_dc_ekg_kibana.rule=PathPrefix(\"/${DOLLAR}{CONTECO_TYPE}/kibana\")"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_LABELS=
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS elasticsearch.base
# START SETTINGS kibana.base
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.05"
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="256m"
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="128m"
# END SETTINGS kibana.base
# START SETTINGS grafana.base
export CONTECO_DC_EKG_GRAFANA_DEPLOY_LABELS=
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base
# START SETTINGS nginx.base
export CONTECO_DC_EXT_ELASTICSEARCH_VOLUMES=
export CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_EXT_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS nginx.base
# START SETTINGS nginx.base
export CONTECO_DC_UI_GRAFANA_VOLUMES=
export CONTECO_DC_UI_GRAFANA_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_UI_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_UI_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_UI_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS nginx.base
# START SETTINGS nginx.base
export CONTECO_DC_UI_KIBANA_VOLUMES=
export CONTECO_DC_UI_KIBANA_DEPLOY_RESOURCES_LIMITS_CPUS=
export CONTECO_DC_UI_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_UI_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_UI_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_NETWORKS="${CONTECO_TYPE}_overlay: { external: true }"
# END TOPLEVEL SETTINGS

