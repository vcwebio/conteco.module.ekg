#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="stack.ekg,nginx.rewrite,nginx.rewrite,nginx.rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES_PREVIOUS="conteco_dc_ekg,conteco_dc_url_rewrite,conteco_dc_url_rewrite,conteco_dc_url_rewrite"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_ekg,conteco_dc_ekg_rest_elasticsearch,conteco_dc_ekg_ui_grafana,conteco_dc_ekg_ui_kibana"
export CONTECO_DC_GLOBAL_BOOTSTACKS="conteco_dc_ekg"
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_ekg_rest_elasticsearch,conteco_dc_ekg_ui_grafana,conteco_dc_ekg_ui_kibana"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch_volume,${DOLLAR}{CONTECO_STACKPREFIX}_grafana_volume"
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL='$CONTECO_DC_EKG_REST_ELASTICSEARCH_ENVIRONMENT_CONF_PATH,$CONTECO_DC_EKG_REST_ELASTICSEARCH_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_EKG_REST_ELASTICSEARCH_COMPOSE_EXTENSIONS,$CONTECO_DC_EKG_UI_GRAFANA_ENVIRONMENT_CONF_PATH,$CONTECO_DC_EKG_UI_GRAFANA_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_EKG_UI_GRAFANA_COMPOSE_EXTENSIONS,$CONTECO_DC_EKG_UI_KIBANA_ENVIRONMENT_CONF_PATH,$CONTECO_DC_EKG_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM,$CONTECO_DC_EKG_UI_KIBANA_COMPOSE_EXTENSIONS,$CONTECO_DC_GLOBAL_NETWORKS,$CONTECO_DC_GLOBAL_VOLUMES'
export CONTECO_DC_EKG_REST_ELASTICSEARCH_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_URLPREFIX}/elasticsearch"
export CONTECO_DC_EKG_REST_ELASTICSEARCH_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch:9200"
export CONTECO_DC_EKG_REST_ELASTICSEARCH_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_elasticsearch.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}/elasticsearch\")]
${DOLLAR}{CONTECO_DC_EKG_REST_ELASTICSEARCH_COMPOSE_EXTENSIONS}"
export CONTECO_DC_EKG_UI_GRAFANA_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_URLPREFIX}/grafana"
export CONTECO_DC_EKG_UI_GRAFANA_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_STACKPREFIX}_grafana:3000"
export CONTECO_DC_EKG_UI_GRAFANA_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_grafana.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}/grafana\")]
${DOLLAR}{CONTECO_DC_EKG_UI_GRAFANA_COMPOSE_EXTENSIONS}"
export CONTECO_DC_EKG_UI_KIBANA_ENVIRONMENT_CONF_PATH="/${DOLLAR}{CONTECO_URLPREFIX}/kibana"
export CONTECO_DC_EKG_UI_KIBANA_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{CONTECO_STACKPREFIX}_kibana:5601"
export CONTECO_DC_EKG_UI_KIBANA_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{CONTECO_NETWORKGLOBAL}_overlay, traefik.http.services.${DOLLAR}{CONTECO_STACKPREFIX}_kibana.loadbalancer.server.port=80, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_kibana.entrypoints=conteco, traefik.http.routers.${DOLLAR}{CONTECO_STACKPREFIX}_kibana.rule=PathPrefix(\"/${DOLLAR}{CONTECO_URLPREFIX}/kibana\")]
${DOLLAR}{CONTECO_DC_EKG_UI_KIBANA_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS elasticsearch.base
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="768m"
export CONTECO_DC_EKG_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
# END SETTINGS elasticsearch.base
# START SETTINGS kibana.base
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="512m"
export CONTECO_DC_EKG_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END SETTINGS kibana.base
# START SETTINGS grafana.base
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_EKG_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS grafana.base
# START SETTINGS nginx.base
export CONTECO_DC_EKG_REST_ELASTICSEARCH_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_EKG_REST_ELASTICSEARCH_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base
# START SETTINGS nginx.base
export CONTECO_DC_EKG_UI_GRAFANA_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_EKG_UI_GRAFANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base
# START SETTINGS nginx.base
export CONTECO_DC_EKG_UI_KIBANA_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_EKG_UI_KIBANA_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS

